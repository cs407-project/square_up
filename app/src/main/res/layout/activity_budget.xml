<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A"
    android:padding="16dp">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:background="#0D1B2A"
        android:src="@drawable/ic_back_arrow"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/personal_budgeting_title"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:id="@+id/addButton2"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_below="@+id/addTrans"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="#354C61"
        android:paddingLeft="32dp"
        android:paddingTop="8dp"
        android:paddingRight="32dp"
        android:paddingBottom="8dp"
        android:text="@string/add"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/addBudg"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@+id/BudgetCat"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:layout_marginStart="27dp"
        android:layout_marginTop="-26dp"
        android:layout_marginEnd="21dp"
        android:layout_toEndOf="@+id/BudgetCat" />

    <Spinner
        android:id="@+id/addTrans"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addBudg"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="80dp"
        android:layout_toEndOf="@+id/BudgetCat" />

    <TextView
        android:id="@+id/BudgetCat"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="50dp"
        android:text="@string/budget_category_input"
        android:textColor="#FFFEFE" />

    <TextView
        android:id="@+id/AddtoTrans"
        android:layout_width="162dp"
        android:layout_height="23dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="194dp"
        android:text="@string/add_transaction"
        android:textColor="#FFFEFE" />

    <ScrollView
        android:layout_width="384dp"
        android:layout_height="331dp"
        android:layout_above="@+id/addButton"
        android:layout_below="@+id/addButton2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="21dp">

        <LinearLayout
            android:id="@+id/budgetGraphContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />
    </ScrollView>

    <TextView
        android:id="@+id/addNewBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Add New Budget Category"
        android:textSize="16sp"
        android:textColor="#FFFEFE" />

    <ImageView
        android:id="@+id/addButton"
        android:backgroundTint="#354C61"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_add"
        android:padding="8dp" />

</RelativeLayout>